<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/includeProgress"
                layout="@layout/screening_progress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvName"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/husband_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvHusbandName"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvDob"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/date_hint"
                    android:inputType="date"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/age_in_years"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvAge"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="number"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/Address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvAddress"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/form_text_size" />




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/village"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvVillage"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvPhoneNo"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="phone"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/date_of_lmp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvLmp"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/date_hint"
                    android:inputType="date"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/current_month_of_pregnancy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvCurrentPregnancyMonth"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="number"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/height_in_cm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvHeight"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/pre_pregnancy_or_first_timer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/form_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:text="@string/weight_in_kg"
                    android:textColor="@color/black"
                    android:textSize="@dimen/form_text_size" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tvWeight"
                    style="@style/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/form_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/pre_pregnancy_or_first_timer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/form_text_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSaveAndNext"
                    style="@style/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/save_and_next" />

                <Button
                    android:id="@+id/btnSkipToNext"
                    style="@style/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="@string/skip_to_next" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>