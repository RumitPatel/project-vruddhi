<resources>
    <!-- Base application theme. -->
    <style name="Theme.Androidgeocode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="btn1" parent="android:Widget">
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:paddingStart">@dimen/_40sdp</item>
        <item name="android:paddingEnd">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>

    <style name="editText1" parent="android:Widget">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:height">@dimen/_32sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>